@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Вход</title>
    <link rel="stylesheet" href="~/css/authorization.css" asp-append-version="true" />
</head>
<body>
    <div class="container" id="container">
        <form>
            <div class="sign-container">
                <h1>Вход</h1>

                <span asp-validation-for="Login" class="text-danger"></span>
                <input asp-for="Login" type="text" placeholder="Login" />

                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="Password" type="password" placeholder="Password" />

                <a href="#">Забыли пароль?</a>
                <button formmethod="post" asp-controller="Authorization" asp-action="Login">Войти</button>
            </div>

            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel">
                        <h1>Привет, друг!</h1>
                        <p>Нет учётной записи? Создайте её!</p>
                        <button formmethod="get" asp-controller="Authorization" asp-action="Register" class="ghost">Создать</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
